{
  "name": "@conversion-microservices/frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npx vite build",
    "build:vercel": "node fix-build.mjs && npx vite build",
    "direct-deploy": "node direct-deploy.mjs",
    "vercel-deploy": "./direct-deploy.sh",
    "vercel-standalone": "node vercel-standalone.mjs",
    "minimal-deploy": "node minimal-deploy.mjs",
    "build:test": "node build-test.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:modules": "eslint --config .eslintrc.module.cjs \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:modules:fix": "eslint --config .eslintrc.module.cjs \"src/**/*.{ts,tsx}\" --fix",
    "fix:imports": "node scripts/standardize-imports.mjs --fix",
    "check:imports": "node scripts/standardize-imports.mjs",
    "fix:modules": "node scripts/fix-module-imports.mjs --fix",
    "check:modules": "node scripts/fix-module-imports.mjs --check",
    "fix:all": "npm run fix:modules && npm run fix:imports && npm run lint:fix",
    "preview": "vite preview --base=/pdfspark/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "node vercel-deploy.mjs",
    "deploy:vercel": "node final-deploy.mjs",
    "fix:www": "node fix-www-redirect.mjs",
    "deploy:www": "./deploy-www-fix.sh",
    "verify:www": "node verify-www-fix.mjs",
    "deploy:fix": "node simple-fix-deploy.mjs",
    "deploy:pdfspark": "node pdfspark-deploy.mjs",
    "test-local": "npm run build && npx serve -s dist",
    "fix:deploy": "node fix-vercel-deployment.mjs",
    "verify:url": "node tools/check-deployment-url.mjs"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.14",
    "@sentry/browser": "^7.120.3",
    "@sentry/react": "^9.9.0",
    "@types/dompurify": "^3.0.5",
    "@types/react-dropzone": "^5.1.0",
    "axios": "^1.6.7",
    "clsx": "^2.1.0",
    "dompurify": "^3.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-pdf": "^7.7.1",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^2.2.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^6.2.3",
    "vitest": "^1.3.1"
  }
}
