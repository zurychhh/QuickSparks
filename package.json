{
  "name": "conversion-microservices",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm -r --parallel start",
    "generate-schemas": "pnpm --filter @conversion-microservices/shared generate-interfaces",
    "validate-schemas": "pnpm --filter @conversion-microservices/shared test",
    "storybook": "pnpm --filter @conversion-microservices/ui-components storybook",
    "build-storybook": "pnpm --filter @conversion-microservices/ui-components build-storybook",
    "pdf-test:dev": "pnpm --filter @conversion-microservices/pdf-service-test dev",
    "pdf-test:benchmark": "pnpm --filter @conversion-microservices/pdf-service-test benchmark",
    "pdf-test:quality": "pnpm --filter @conversion-microservices/pdf-service-test quality-test",
    "pdf-test:sample": "pnpm --filter @conversion-microservices/pdf-service-test node src/create-sample-pdf.js"
  },
  "keywords": [
    "microservices",
    "conversion",
    "pdf",
    "image",
    "qrcode",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "description": "A web application with various file conversion microservices",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "reflect-metadata": "^0.2.2"
  }
}
