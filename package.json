{
  "name": "conversion-microservices",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "exit 0",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format:check",
    "fix": "pnpm run lint:fix && pnpm run format",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm -r --parallel start",
    "generate-schemas": "pnpm --filter @conversion-microservices/shared generate-interfaces",
    "validate-schemas": "pnpm --filter @conversion-microservices/shared test",
    "storybook": "pnpm --filter @conversion-microservices/ui-components storybook",
    "build-storybook": "pnpm --filter @conversion-microservices/ui-components build-storybook",
    "pdf-test:dev": "pnpm --filter @conversion-microservices/pdf-service-test dev",
    "pdf-test:benchmark": "pnpm --filter @conversion-microservices/pdf-service-test benchmark",
    "pdf-test:quality": "pnpm --filter @conversion-microservices/pdf-service-test quality-test",
    "pdf-test:sample": "pnpm --filter @conversion-microservices/pdf-service-test node src/create-sample-pdf.js",
    "create:service": "node scripts/create-microservice.js",
    "create:component": "node scripts/create-component.js",
    "create:feature": "scripts/create-feature.sh",
    "setup": "scripts/setup-environment.sh",
    "db:setup": "node scripts/db-setup.js --action setup",
    "db:migrate": "node scripts/db-setup.js --action migrate",
    "db:seed": "node scripts/db-setup.js --action seed",
    "release": "scripts/release.sh"
  },
  "keywords": [
    "microservices",
    "conversion",
    "pdf",
    "image",
    "qrcode",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "description": "A web application with various file conversion microservices",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-node": "10.9.2"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.9.0",
    "reflect-metadata": "^0.2.2"
  }
}
